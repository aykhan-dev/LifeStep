<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_app"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="az.rabita.lifestep.ui.fragment.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordActivity"
            app:destination="@id/forgotPasswordActivity" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="az.rabita.lifestep.ui.fragment.register.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register" />
    <activity
        android:id="@+id/forgotPasswordActivity"
        android:name="az.rabita.lifestep.ui.activity.forgotPassword.ForgotPasswordActivity"
        android:label="ForgotPasswordActivity"
        tools:layout="@layout/activity_forgot_password" />


</navigation>