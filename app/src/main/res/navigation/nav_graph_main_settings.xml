<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main_settings"
    app:startDestination="@id/settingsFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="az.rabita.lifestep.ui.fragment.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_friendsFragment"
            app:destination="@id/friendsFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_inviteFriendFragment"
            app:destination="@id/inviteFriendFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_contactFragment"
            app:destination="@id/contactFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_championsFragment"
            app:destination="@id/championsFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_languageFragment"
            app:destination="@id/languageFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_aboutUsFragment"
            app:destination="@id/aboutUsFragment" />
    </fragment>

    <fragment
        android:id="@+id/friendsFragment"
        android:name="az.rabita.lifestep.ui.fragment.friends.FriendsFragment"
        android:label="FriendsFragment"
        tools:layout="@layout/fragment_friends" />

    <fragment
        android:id="@+id/inviteFriendFragment"
        android:name="az.rabita.lifestep.ui.fragment.inviteFriend.InviteFriendFragment"
        android:label="InviteFriendFragment"
        tools:layout="@layout/fragment_invite_friend" />

    <fragment
        android:id="@+id/historyFragment"
        android:name="az.rabita.lifestep.ui.fragment.history.HistoryFragment"
        android:label="HistoryFragment"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/contactFragment"
        android:name="az.rabita.lifestep.ui.fragment.contact.ContactFragment"
        android:label="ContactFragment"
        tools:layout="@layout/fragment_contact" />

    <fragment
        android:id="@+id/championsFragment"
        android:name="az.rabita.lifestep.ui.fragment.champions.ChampionsFragment"
        android:label="ChampionsFragment"
        tools:layout="@layout/fragment_champions" />

    <fragment
        android:id="@+id/languageFragment"
        android:name="az.rabita.lifestep.ui.fragment.language.LanguageFragment"
        android:label="LanguageFragment"
        tools:layout="@layout/fragment_language" />

    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="az.rabita.lifestep.ui.fragment.aboutUs.AboutUsFragment"
        android:label="AboutUsFragment"
        tools:layout="@layout/fragment_about_us" />

</navigation>